<form id="form-usuario" method="post" action="/painel-dlx/usuarios/salvar-usuario-existente">
    <input type="hidden" name="usuario_id" value="<?php echo $usuario->getUsuarioId() ?>">

    <fieldset class="form-grupo">
        <legend class="form-titulo">Dados Pessoais</legend>

        <p class="form-paragr">
            <label for="txt-nome" class="form-rotulo">Nome:</label>
            <input type="text" name="nome" id="txt-nome" value="<?php echo $usuario->getNome() ?>" class="form-controle form-controle-texto" required>
        </p>

        <p class="form-paragr">
            <label for="txt-email" class="form-rotulo">Email:</label>
            <input type="email" name="email" id="txt-email" value="<?php echo $usuario->getEmail() ?>" placeholder="seunome@gmail.com" class="form-controle form-controle-email" required>
        </p>
    </fieldset>


    <fieldset class="form-grupo">
        <legend class="form-titulo">Acesso ao Sistema</legend>

        <a href="javascript:" class="btn btn-alterar-senha">Alterar senha</a>
    </fieldset>

    <fieldset class="form-grupo">
        <legend class="form-titulo">Grupos</legend>

        <?php if ($lista_grupos) : ?>
            <div class="lista-grupos">
                <?php
                /** @var GrupoUsuario $grupo_usuario */
                foreach($lista_grupos as $grupo_usuario) :
                    $is_check = $usuario->getGrupos()->exists(function ($key, GrupoUsuario $grupo_usuario_x) use ($grupo_usuario) {
                        return $grupo_usuario_x->getGrupoUsuarioId() === $grupo_usuario->getGrupoUsuarioId();
                    }) ?>
                    <p class="form-paragr">
                        <input type="checkbox" name="grupo_usuario[]" id="chk-grupo-usuario-<?php echo $grupo_usuario->getGrupoUsuarioId() ?>"<?php echo $is_check ? ' CHECKED' : '' ?> class="form-controle form-controle-checkbox">
                        <label for="chk-grupo-usuario-<?php echo $grupo_usuario->getGrupoUsuarioId() ?>"><?php echo $grupo_usuario->getNome() ?></label>
                    </p>
                <?php endforeach; ?>
            </div>
        <?php else : ?>
            <p class="sem-registros">Nenhum grupo de usu√°rio encontrado.</p>
        <?php endif ?>
    </fieldset>

    <p class="form-botoes">
        <button type="submit" class="btn btn-salvar">Salvar</button>
        <button type="reset" class="btn btn-cancelar">Cancelar</button>
    </p>
