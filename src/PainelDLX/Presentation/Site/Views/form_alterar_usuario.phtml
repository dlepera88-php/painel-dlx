/**
 * @var VileX $this
 */

/** @var Usuario $usuario */
$usuario = $this->getAtributo('usuario');
/** @var GrupoUsuario[] $lista_grupos */
$lista_grupos = $this->getAtributo('lista_grupos');
?>
