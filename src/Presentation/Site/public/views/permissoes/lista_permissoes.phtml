use PainelDLX\Domain\PermissoesUsuario\Entities\PermissaoUsuario;
use Vilex\VileX;

/**
 * @var VileX $this
 */

$lista_permissoes = $this->getAtributo('lista_permissoes');
?>
[CORPO]
<h1 class="titulo-pagina"><?php echo $this->getAtributo('titulo-pagina') ?></h1>

<nav class="menu-opcoes">
    <a href="/painel-dlx/permissoes/novo" class="link-inserir">Adicionar permissão</a>
</nav>

<table id="lista-usuarios" class="lista-registros">
    <thead>
    <tr>
        <th id="usuario-id">ID</th>
        <th id="nome">Nome</th>
        <th id="opcoes">Opções</th>
    </tr>
    </thead>

    <tbody>
    <?php if (!count($lista_permissoes)) : ?>
    <tr>
        <td colspan="3">Nenhuma permissão de usuário encontrada.</td>
    </tr>
    <?php endif;

    /** @var PermissaoUsuario $permissao */
    foreach ($lista_permissoes as $permissao) : ?>
        <tr>
            <td headers="usuario-id"><?php echo $permissao->getPermissaoUsuarioId() ?></td>
            <td headers="usuario">
                <?php echo $permissao->getAlias() ?><br>
                <?php echo $permissao->getDescricao() ?>
            </td>
            <td headers="opcoes">
                <a href="permissoes/detalhe?permissao_usuario_id=<?php echo $permissao->getPermissaoUsuarioId() ?>" class="link-detalhe" title="">
                    Detalhe
                </a>

                <a href="permissoes/editar?permissao_usuario_id=<?php echo $permissao->getPermissaoUsuarioId() ?>" class="link-editar" title="Editar essa permissão">
                    Editar
                </a>

                <a href="javascript:" class="link-excluir" onclick="excluirPermissaoUsuario(<?php echo $permissao->getPermissaoUsuarioId() ?>)" title="Excluir essa permissão">
                    Excluir
                </a>
            </td>
        </tr>
    <?php endforeach; ?>
    </tbody>
</table>
[/CORPO]

[SCRIPTS]
<script>
    function excluirPermissaoUsuario(permissao_usuario_id) {
        if (confirm('Deseja realmente excluir essa permissão?')) {
            $.ajax({
                url: '/painel-dlx/permissoes/excluir-permissao',
                type: 'post', //delete
                data: 'permissao_usuario_id=' + permissao_usuario_id,
                dataType: 'json',
                success: function (retorno) {
                    alert(retorno.mensagem);
                    window.location.reload();
                }
            })
        }

        return false;
    }
</script>
[/SCRIPTS]