            </a>
        </fieldset>

        <fieldset class="form-grupo" id="grupos-usuarios">
            <legend class="form-titulo">Grupos</legend>

            <?php if ($lista_grupos) : ?>
                <div class="lista-grupos">
                    <?php
                    /** @var GrupoUsuario $grupo_usuario */
                    foreach($lista_grupos as $grupo_usuario) :
                        $is_check = $usuario->getGrupos()->contains($grupo_usuario) ?>
                        <p class="form-paragr">
                            <input type="checkbox" name="grupos[]" id="chk-grupo-usuario-<?php echo $grupo_usuario->getGrupoUsuarioId() ?>" value="<?php echo $grupo_usuario->getGrupoUsuarioId() ?>"<?php echo $is_check ? ' CHECKED' : '' ?> class="form-controle form-controle-checkbox">
                            <label for="chk-grupo-usuario-<?php echo $grupo_usuario->getGrupoUsuarioId() ?>"><?php echo $grupo_usuario->getNome() ?></label>
                        </p>
                    <?php endforeach; ?>
                </div>
            <?php else : ?>
                <p class="sem-registros">Nenhum grupo de usu√°rio encontrado.</p>
            <?php endif ?>
        </fieldset>

