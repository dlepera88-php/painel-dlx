[SCRIPTS]
<script>
    function alterarSenhaUsuario(form) {
        var $form = $(form);

        $.ajax({
            url: $form.attr('action'),
            type: $form.attr('method'),
            data: $form.serialize(),
            dataType: 'json',
            success: function(retorno) {
                alert(retorno.mensagem);

                if (retorno.retorno === 'sucesso') {
                    window.location = '/painel-dlx/usuarios/detalhe?usuario_id=<?php echo $usuario->getUsuarioId() ?>';
                }
            }
        });

        return false;
    }
</script>
[/SCRIPTS]